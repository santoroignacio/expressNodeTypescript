<div class="text-center m-5 text-bg-warning">
    <h1>Actualizar Usuario</h1>
</div>
<div class="Formulario text-center m-5 ">
    <div class="container">
        <h2>Formulario</h2>
        <form action='/usuario/actualizar/{{usuarioBuscado._id}}' method='post'>
            <div class="form-group">
                <label htmlFor='nombreUsuario'>Nombre Usuario</label>
                <input class='form-control' name='nombreUsuario' type='text' value="{{usuarioBuscado.nombreUsuario}}"></input>
            </div>
            <div class="form-group">
                <label htmlFor='emailUsuario'>Email Usuario</label>
                <input class='form-control' name='emailUsuario' type='email' value="{{usuarioBuscado.emailUsuario}}"></input>
            </div>
            <div class="form-group">
                <label htmlFor='ciudadUsuario'>Ciudad Usuario</label>
                <input class='form-control' name='ciudadUsuario' type='text' value="{{usuarioBuscado.ciudadUsuario}}"></input>
            </div>
            <div>
                <button type='submit' class="btn btn-warning mt-3 w-50">Actualizar</button>
            </div>
            <div>
                <button type='reset' class="btn btn-danger mt-3 w-50">Borrar</button>
            </div>
        </form>

    </div>
</div>