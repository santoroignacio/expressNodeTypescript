<div class="container m-3">
    <div class="m-5 text-center">
        <h1>Listado de productos en Cards</h1>
    </div>    
    <div class="container m-3">
        <div class="row">
            <div class="col-sm-12 my-3 d-flex text-center justify-content-center">
                {{#each cards}}
                <div class="card " style="width: 18rem;">
                    <img src="{{imagenProducto}}" class="card-img-top" style="width: 100%; height:12rem">
                    <div class="card-body">
                        <h5 class="card-title">{{nombreProducto}}</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's
                            content.</p>
                
                            {{!-- <a href="/producto/cards/{{ _id }}" class="btn btn-success mb-2">Ver Producto</a> --}}
                             <form action="/producto/cards/{{ _id }}" method="get" >
                                <input type="submit" value="Ver Producto" class="btn btn-success mb-2">
                            </form>
                            
                            <form action="/producto/eliminar/{{ _id }}" method="post">
                                <input type="submit" value="Eliminar Producto" class="btn btn-danger mb-2">
                            </form>
                            
                             <form action="/producto/actualizar/{{ _id }}" method="get">
                             <input type="submit" value="Actualizar Producto" class="btn btn-warning mb-2">
                             </form>
                       
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
</div>