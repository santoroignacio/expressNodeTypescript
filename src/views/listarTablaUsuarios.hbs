<div class="container m-5 text-center">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre Usuario</th>
                <th scope="col">Email</th>
                <th scope="col">Ciudad</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            {{#each listaUsuarios}}

            <tr>
                <td>{{nombreUsuario}}</td>
                <td>{{emailUsuario}}</td>
                <td>{{ciudadUsuario}}</td>
                <td >
                    <form action="/usuario/eliminar/{{ _id }}" method="post">
                        <input type="submit" value="Eliminar Usuario" class="btn btn-danger mb-2">
                    </form>
</td>
<td>
                    <form action="/usuario/actualizar/{{ _id }}" method="get">
                        <input type="submit" value="Actualizar Usuario" class="btn btn-warning mb-2">
                    </form>
                </td>

            </tr>

            {{/each}}

        </tbody>
    </table>
</div>